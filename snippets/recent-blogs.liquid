{% if blogs.news.articles.size > 0 %}
<div class="text blogsummary">
	<h2>{{ settings.text_from_the_blog }}</h2>
	{% for article in blogs.news.articles limit: recent-blogs %}
	<h3><a href="{{ article.url }}">{{ article.title | strip_html | truncate: 30 }}</a></h3>
	<p class="date">{{ article.created_at | date: "%B %d, %Y" }}</p>
	<p>{{ article.content | strip_html | truncatewords: 20 }}</p>
	<p><a class="readmore" href="{{ article.url }}">{{ settings.text_read_more }} &rarr;</a></p>
	{% endfor %}
</div>
{% endif %}