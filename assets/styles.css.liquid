#inventory{
	clear:both;

        /*Give this div a width if you'd like to set the barcharts to a certain width. Otherwise, it will take on the width of its parent div. */
}

.inventory-filler{
	background:{{ settings.image_back_color }};
	-webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
	height:20px;
}

.inventory-item{
	margin-bottom:15px;
}

.inventory-status{
	font-style:italic;
}

.inventory-bar{
	background:#fff;
	height:20px;
	width:100%;
	-webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
}

#productaction{
	background:{{ settings.image_back_inner_color }};
	padding: 5px 20px 5px 20px;
}

#productaction .buttoncont {
	float:right;
}

#mc_embed_signup h2 {
	margin: 0 0 0 0;
}

#mc_embed_signup input[type="email"] {
	width:215px;
	height:30px;
    line-height:30px;
	border:1px solid #ddd;
	padding:0 0 0 10px;
    color:#222;
	border-radius: 3px;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	margin: 0 0 5px 0;
}

#mc_embed_signup .buttoncont {
	margin: 0 0 10px 0;
}

.letterhead {
	background: #fff;
	border: 1px solid #bbb;
	-webkit-box-shadow:0 5px 10px rgba(0, 0, 0, 0.2);
	-moz-box-shadow:0 5px 10px rgba(0, 0, 0, 0.2);
	box-shadow:0 5px 10px rgba(0, 0, 0, 0.2);
	padding: 30px;
}